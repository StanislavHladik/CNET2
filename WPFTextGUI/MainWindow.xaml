<Window x:Class="WPFTextGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTextGUI"
        mc:Ignorable="d"
        Loaded="Window_Loaded"  
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Name="btnLoad" Content="Load" HorizontalAlignment="Left" Margin="15,14,0,0" VerticalAlignment="Top" Height="35" Width="125" Grid.Row="0" Click="btnLoad_Click"/>

        <ScrollViewer Grid.Row="1">
            <TextBlock Name="txbInfo" FontSize="20"/>
        </ScrollViewer>
        
    </Grid>
</Window>
