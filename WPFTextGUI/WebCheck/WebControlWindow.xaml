<Window x:Class="WPFTextGUI.Webcheck.WebControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTextGUI.Webcheck"
        mc:Ignorable="d"
        Title="WebControlWindow" Height="400" Width="500">
    <Grid>
        <Label Content="Url" HorizontalAlignment="Left" FontSize="20" Margin="26,4,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUrl" FontSize="24" HorizontalAlignment="Left" Margin="30,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="416"/>
        <Label Content="Search" FontSize="20" HorizontalAlignment="Left" Margin="28,83,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTerm" FontSize="24" HorizontalAlignment="Left" Margin="30,113,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="416"/>
        <Button x:Name="btnStart" FontSize="24" Width="100" Content="Start" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center" Click="btnStart_Click"/>
        <Button x:Name="btnStop" FontSize="24"  Width="100" Content="Stop" HorizontalAlignment="Left" Margin="175,0,0,0" VerticalAlignment="Center" Click="btnStop_Click"/>
    </Grid>
</Window>
